<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/regist2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Выберите дату записи на приём в бюро*"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="299dp"
        android:layout_height="268dp"
        android:layout_marginTop="24dp"
        android:onClick="onClick"
        android:selectedWeekBackgroundColor="#3F51B5"
        android:weekNumberColor="#0000ff"
        android:weekSeparatorLineColor="#3F51B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regist2" />

    <Button
        android:id="@+id/buttonreg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        android:shadowColor="#000000"
        android:text="Завершить регистрацию"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#3F51B5"
        android:textSize="18sp"
        app:backgroundTint="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recomendation"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:id="@+id/recomendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="24dp"
        android:text="*ПРИ ЯВКЕ НА СВОЙ ПРИЁМ НЕОБХОДИМО С СОБОЙ ИМЕТЬ: ПАСПОРТ; СНИЛС; ДОКУМЕНТЫ, УДОСТОВЕРЯЮЩИЕ ИХ ПРИНАДЛЕЖНОТЬ ПОДАЮЩЕГО ЗАЯВКУ."
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

</androidx.constraintlayout.widget.ConstraintLayout>
